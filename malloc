/*
    malloc() -takes number of bytes to be allocated
    & returns a pointer of type void
    ptr = (int*) malloc(5 * sizeof(int));
*/
#include<stdio.h>
#include<stdlib.h>
int main(){
    int *ptr;
    ptr = (int *) malloc(5* sizeof(int));
        ptr[0] = 22;
        ptr[1] = 33;
        ptr[2] =44 ;
        ptr[3] = 23;
        for(int i=0;i<4;i++){
          printf("%d\n",ptr[i]);
            }
    return 0;
}
